<form action="/account/file/edit" method="post" id="dataEdition">
<div class="modal fade" id='Editor' tabindex="-1" role="dialog" aria-labelledby="EditorTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content modal-body">
            <div class="modal-header">
                <h5 class="modal-title" id="EditorTitle">Row Editor</h5>
            </div>
            <div class="modal-body">
                <!--Small form to edit the table -->
                <div class="container">
                
                    <div class="form-group row">
                        <label for="TRA-Text-input" class="col-2 col-form-label">TRA</label>
                        <div class="col-10">
                          <input class="form-control" type="text" value="" id="TRA-input" placeholder="Put your TRA here">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-2" id="Validated">Results Status</label>
                        <div class="col-sm-10">
                            <select class="custom-select" id="validatedCombo">
                                <option selected>Choose...</option>
                                <option value="Preliminary">Preliminary</option>
                                <option value="Definitive">Definitive</option>
                                <option value="Investigation">Investigation</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2">Validated</label>
                            <label class="form-check-label pl-200">
                                <input class="form-check-input" type="checkbox" id="validatedCheck">
                            </label>
                        </label>
                    </div>
                    <div class="form-group row">
                            <label class="col-sm-2">CTR</label>
                            <label class="form-check-label pl-200">
                                    <input class="form-check-input pl-200" type="checkbox" id="CTRCheck">
                                </label>
                            </label>
                    </div>
                </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeEditorButton">Close</button>
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </div>
    </div>
</div> 
</form>
