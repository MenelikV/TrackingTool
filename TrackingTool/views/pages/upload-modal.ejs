<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Select the files you wish to
                    upload</h5>
            </div>
            <hr>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4 text-left">
                        <form action="/account/file/upload" method="post" enctype="multipart/form-data" id="files" data-toggle="popover" data-trigger="hover" data-content="Please select all the corresponding files."  data-placement="left"> 
                            <input type="file" name="file" id="file" multiple>
                        </form>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="lds-ring" id="load" style="display: none;">
                            <div></div>
                            <div></div>
                            <div></div>
                            <div></div>
                        </div>
                    </div>
                    <div class="col-md-4"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="#closeButton">Close</button>
                <button type="submit" id="save" form="files" class="btn btn-primary">Save changes &raquo;</button>
            </div>
        </div>
    </div>
</div>