<body>
    <div class="container-fluid">
        <div class="jumbotron">

            <div class="container-fluid ">
                <h1 class="display-4">Uploaded Files</h1>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Path</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>

                        <% result.forEach(function(file){ %>

                        <tr>
                            <td>
                                <%= file.id %>
                            </td>

                            <td>
                                <%= file.entry %>
                            </td>

                            <td>
                                <a href="" data-target="#exampleModalCenter" data-toggle="modal" data-book-id="<%= file.id %>">Edit</a>

                            </td>

                        </tr>
                        <% }) %>
                    </tbody>
                </table>


            </div>

        </div>
    </div>



    <!-- Edit Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content modal-body">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Select the new file</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>


                <div class="modal-body">
                    <!--    Begin Modal Body -->

                    <input type="text" name="bookId" value="" />
                    <form action="/" name="files" method="post" enctype="multipart/form-data" id="files">
                        <input type="file" name="file" id="file">
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" form="files" class="btn btn-primary">Save changes &raquo;</button>
                </div>
            </div>
        </div>
    </div>

</body>